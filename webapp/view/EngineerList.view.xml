<mvc:View controllerName="productSupport.scheduler.controller.EngineerList" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" xmlns:unified="sap.ui.unified">
	<VBox>
		<PlanningCalendar class="sapUiSmallMargin" id = "engineerList" height="auto" width="auto" rows="{path: 'engineer>/ADMIN'}" showRowHeaders="true">
			<toolbarContent title="Admin">
				<Title text="ADMIN"/>
				<ToolbarSpacer/>
				<SearchField id="searchField" width="20%" placeholder="Search" search="onSearch"/>
				<Button id="sortUsersButton" press="onSort" tooltip="Search" icon="sap-icon://sort"/>
				<Button id="refreshUsersButton"
					icon="sap-icon://refresh"
					tooltip="{i18n>refreshButtonText}"
					press="onRefresh"/>
			</toolbarContent>
			<rows>
				<PlanningCalendarRow title="{engineer>fname} {engineer>lname}" text="{engineer>email}" appointments="{path: 'engineer>appointments', templateShareable: 'true'}">
					<appointments>
						<unified:CalendarAppointment
								startDate="{path: 'engineer>start', formatter: '.dateFormatter'}"
								endDate="{path: 'engineer>end', formatter: '.dateFormatter'}"
								title="{engineer>title}"
								text="{engineer>info}"
								tentative="{tentative}">
						</unified:CalendarAppointment>
					</appointments>
				</PlanningCalendarRow>
			</rows>
		</PlanningCalendar>
		<PlanningCalendar class="sapUiSmallMargin" id = "engineerList2" height="auto" width="auto" rows="{path: 'engineer>/WEBI', parameters: {$count: true}}">
			<toolbarContent>
				<Title text="WEBI"/>
			</toolbarContent>
			<rows>
				<PlanningCalendarRow title="{engineer>fname} {engineer>lname}" text="{engineer>email}" appointments="{path: 'engineer>appointments', templateShareable: 'true'}">
					<appointments>
						<unified:CalendarAppointment
								startDate="{path: 'engineer>start', formatter: '.dateFormatter'}"
								endDate="{path: 'engineer>end', formatter: '.dateFormatter'}"
								title="{engineer>title}"
								text="{engineer>info}"
								type="{engineer>type}"
								tentative="{tentative}">
						</unified:CalendarAppointment>
					</appointments>
				</PlanningCalendarRow>
			</rows>
		</PlanningCalendar>
	</VBox>
</mvc:View>
